{
    "name": "vqvae_mnist",
    "n_gpu": 0,
    "arch": {
        "type": "VQ_CVAE",
        "args": {
            "num_channels": 1,
            "commit_coef": 0.5,
            "vq_coef":1,
            "d": 64
        }
    },
    "data_loader": {
        "type": "MnistDataLoader",
        "args": {
            "data_dir": "data_wiki/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 2,
            "img_size": 32
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.005,
            "weight_decay": 0.0,
            "amsgrad": true
        }
    },
    "loss": "simple_vq_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 1,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}